@model Project_8_MVC_Batool.Faculty

@{
    ViewBag.Title = "Create";
}

<style>
    body {
        background-color: white;
    }
</style>
<br />
<br />
<h2 style=" color: #51be78 ">Create New Faculity</h2>

@using (Html.BeginForm("Create", "Faculties", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <hr />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FaculityName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FaculityName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FaculityName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />


        <div class="form-group">
            @Html.LabelFor(model => model.Faculity_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Faculity_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Faculity_Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Faculity_Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" value="Faculity_Image" name="Faculity_Image" id="Faculity_Image" accept="image/*" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" style="background-color: #51be78 ; color:white " />
            </div>
        </div>
    </div>
}

<br />
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

