@model IEnumerable<Project_8_MVC_Batool.Faculty>

@{
    ViewBag.Title = "Index";
}

<br />
<h2 style="color: #51be78 ">Faculities</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
    .thumbnail {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
    }


        .thumbnail:hover {
            transform: scale(5);
        }


    body {
        background-color: white;
    }
</style>
@using (Html.BeginForm("Index", "Faculties", FormMethod.Post))
{
    <div style="margin-left:25%">
    @Html.TextBox("name")
    <input type="submit" value="Search" style="background-color: #51be78 ; color:white ;border:3px solid #51be78 ;"  />
        </div>
}
<br />
@if (TempData["Message"] != null)
{

    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["Message"]
    </div>
}

@if (TempData["Count"] != null)
{

    <div class="alert alert-warning">
        <strong>Warning !</strong> @TempData["Message"]
    </div>
}
<style>
    body {
        background-color: white;
    }
</style>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FaculityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculity_Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculity_Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FaculityName)
            </td>
            <td>
                <img src="~/image/@item.Faculity_Image" width="50" height="50"  class="thumbnail"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculity_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FaculityID }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.FaculityID }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FaculityID }, new { @class = "btn btn-danger" })

            </td>
        </tr>
    }

</table>





