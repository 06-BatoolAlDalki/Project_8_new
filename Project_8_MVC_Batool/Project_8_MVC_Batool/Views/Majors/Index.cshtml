@model IEnumerable<Project_8_MVC_Batool.Major>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<h2 style="color: #51be78 ">Majors</h2>
<style>
    .thumbnail {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
    }


        .thumbnail:hover {
            transform: scale(5);
        }


    body {
        background-color: white;
    }
</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        <strong>Success! </strong> @TempData["Message"]
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<br />

@using (Html.BeginForm("Index", "Majors", FormMethod.Post))
{
    <div style="margin-left:25%">
        @Html.TextBox("name")
        <input type="submit" value="Search" style="background-color: #51be78 ; color:white ;border:3px solid #51be78 ;"/>
        </div>
        }
<br />
<br />
        <table class="table table-responsive">
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Number of Hour
                </th>
                <th>
                    Minimum Rate
                </th>
                <th>
                    Faculity
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MajorName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Major_Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price_OfHour) JD
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number_OfHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.minimum_rate) %
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Faculty.FaculityName)
                    </td>
                    <td>
                        <img src="~/image/@item.MajorImage" width="50" height="50" class="thumbnail" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MajorID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MajorID }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MajorID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
